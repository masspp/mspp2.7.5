# set
PREFIX      = @prefix@
prefix      = @prefix@
EXEC_PREFIX = @exec_prefix@
exec_prefix = @exec_prefix@
BIN_DIR     = @bindir@
SHARE_DIR   = @datadir@
INCLUDE_DIR = @includedir@
LIB_DIR     = @libdir@
TMP_LIB_DIR = @top_srcdir@/lib/gtk
TMP_PLG_DIR  = @top_srcdir@/build/gtk/plugins
TMP_CONF_DIR = @top_srcdir@/build/gtk/conf
TMP_PLG_DIR = @top_srcdir@/build/gtk/plugins
TMP_INC_DIR = @top_srcdir@/include/kome
MSPP_DIR    = $(SHARE_DIR)/masspp

CXX      = @CXX@
DEFS     = @DEFS@ -DMSPP_INSTALL_DIR=$(MSPP_DIR)
FLAGS    = @CXXFLAGS@
LIBS     = @LDFLAGS@ -L${TMP_LIB_DIR} -lMsppCoreFunctions -lMsppCoreToolkits -lMsppXMLTools -lMsppDataObjects -lMsppImageManager -lMsppEventManager -lxerces-c -lboost_filesystem
INCLUDES = -I@top_srcdir@/include

.SUFFIXES:
.SUFFIXES: .cpp .o
.cpp.o:
	$(CXX) $(DEFS) $(FLAGS) $(INCLUDES) -fPIC -c -o $@ $<

cppfiles := $(wildcard *.cpp)
objfiles = $(cppfiles:.cpp=.o)
xsdfiles := $(wildcard *.xsd)


.PHONY: all
all: $(objfiles)
	$(CXX) $(DEFS) $(FLAGS) $(INCLUDES) $(LIBS) -shared -o $(TMP_LIB_DIR)/libMsppPluginTools.so.1.0 $(objfiles)
	ln -sf libMsppPluginTools.so.1.0 $(TMP_LIB_DIR)/libMsppPluginTools.so
	mkdir -p $(TMP_INC_DIR)/PluginTools
	cp *.h $(TMP_INC_DIR)/PluginTools
	rm -f $(TMP_INC_DIR)/PluginTools/stdafx.h
	mv -f $(TMP_INC_DIR)/PluginTools/PluginTools.h  $(TMP_INC_DIR)
	cp *.xsd $(TMP_CONF_DIR)

.PHONY: clean
clean:
	rm -f $(objfiles)
	rm -Rf $(TMP_INC_DIR)/PluginTools
	rm -f $(TMP_INC_DIR)/PluginTools.h
	cd $(TMP_CONF_DIR); rm -f $(xsdfiles)
